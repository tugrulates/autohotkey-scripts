{
  "workspace": [
    "./500px",
    "./duolingo",
    "./internal",
    "./lonely-planet",
    "./photos",
    "./testing"
  ],
  "tasks": {
    "build": "deno task --recursive compile",
    "install": {
      "command": "mkdir -p $HOME/.local/bin && cp dist/* $HOME/.local/bin",
      "dependencies": ["build"]
    },
    "test": "deno test -A --unstable-kv --doc */*.ts",
    "lint": "deno fmt -q --check && deno lint -q && deno check -q **/*.ts && deno doc --lint **/*.ts",
    "ok": "deno task lint && deno task test"
  },
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "no-non-null-assertion",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "single-var-declarator"
      ]
    }
  }
}
